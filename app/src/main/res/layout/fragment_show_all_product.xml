        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_all_product" />

    </androidx.constraintlayout.widget.ConstraintLayout>

